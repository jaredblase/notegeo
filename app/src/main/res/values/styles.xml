<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="headers" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="placeholder" parent="Widget.AppCompat.TextView">
        <item name="android:textColorHint">#CCFFFFFF</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="activity_label">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="popup_btn">
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!--  Notes  -->
    <style name="white">
        <item name="note_background_color">@color/white</item>
        <item name="note_foreground_color">@color/black</item>
    </style>

    <style name="royal_blue">
        <item name="note_background_color">@color/royal_blue</item>
        <item name="note_foreground_color">@color/white</item>
    </style>

    <style name="dark_blue">
        <item name="note_background_color">@color/dark_blue</item>
        <item name="note_foreground_color">@color/white</item>
    </style>

    <style name="yellow">
        <item name="note_background_color">@color/yellow</item>
        <item name="note_foreground_color">@color/black</item>
    </style>

    <style name="spring_green">
        <item name="note_background_color">@color/spring_green</item>
        <item name="note_foreground_color">@color/black</item>
    </style>

    <style name="coral">
        <item name="note_background_color">@color/coral</item>
        <item name="note_foreground_color">@color/black</item>
    </style>

    <style name="magenta">
        <item name="note_background_color">@color/magenta</item>
        <item name="note_foreground_color">@color/black</item>
    </style>
</resources>